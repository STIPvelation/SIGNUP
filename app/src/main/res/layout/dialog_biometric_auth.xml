<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_login_biometric_auth_login_method_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_biometric_auth_login_method_change"
                android:textSize="18sp"
                android:textColor="@color/text_black_14181B_100"
                android:fontFamily="@font/pretendard_regular_font_family"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="14.5dp"
                android:layout_marginStart="@dimen/common_side_margin_20dp"
                android:layout_marginBottom="14.5dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close_black_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:padding="16dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_biometric_auth_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_solid_gray_e2e7f0_radius_4dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_header_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_biometric_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_biometric_auth_30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="9dp"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="9dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_biometric_auth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_biometric_auth"
                android:textSize="18sp"
                android:textColor="@color/text_black_14181B_100"
                android:fontFamily="@font/pretendard_regular_font_family"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_biometric_auth"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_biometric_auth_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_black_18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_pin_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_solid_gray_e2e7f0_radius_4dp"
            app:layout_constraintTop_toBottomOf="@+id/cl_biometric_auth_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="40dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_pin_30dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="14dp"
                android:layout_marginStart="11dp"
                android:layout_marginBottom="14dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_pin_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/login_biometric_auth_pin_number"
                android:textSize="18sp"
                android:textColor="@color/text_black_14181B_100"
                android:fontFamily="@font/pretendard_regular_font_family"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_pin"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="12dp"
                />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_pin_number_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_black_18dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="12dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>