<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 프로필 섹션 - 그림자 효과와 둥근 모서리 추가 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profile_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/CircleImageView" />

                <TextView
                    android:id="@+id/textViewUserName"
                    style="@style/DefaultTextStyle_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/more_name"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewProfile"
                    app:layout_constraintEnd_toStartOf="@+id/textViewCommonNumber"
                    app:layout_constraintStart_toEndOf="@id/imageViewProfile"
                    app:layout_constraintTop_toTopOf="@id/imageViewProfile"
                    app:layout_constraintVertical_bias="0.5" />

                <TextView
                    android:id="@+id/textViewCommonNumber"
                    style="@style/DefaultTextStyle_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text=""
                    app:layout_constraintBottom_toBottomOf="@+id/imageViewArrow"
                    app:layout_constraintEnd_toStartOf="@+id/imageViewArrow"
                    app:layout_constraintTop_toTopOf="@+id/imageViewArrow" />

                <ImageView
                    android:id="@+id/imageViewArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_next"
                    app:layout_constraintBottom_toBottomOf="@id/imageViewProfile"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/imageViewProfile"
                    app:tint="#AAAAAA" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- 빠른 메뉴 섹션 - Material Chip 스타일로 변경 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="12dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/textViewPriceAlert"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/menu_price_alert"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_bell"
                    app:iconGravity="textStart"
                    app:iconSize="18dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/textViewModeSettings"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/menu_mode_settings"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_settings"
                    app:iconGravity="textStart"
                    app:iconSize="18dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/textViewSecurityAuth"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="@string/menu_security_auth"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_lock"
                    app:iconGravity="textStart"
                    app:iconSize="18dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 아이콘 그리드 섹션 - 카드뷰로 감싸고 그림자 효과 추가 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:id="@+id/icon_grid_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:padding="16dp">

                <!-- 아이콘 1: 웹툰 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_webtoon"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:src="@drawable/ic_ip_toon"
                        app:shapeAppearanceOverlay="@style/RoundedSquareImageView"
                        app:strokeColor="#EEEEEE"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/icon_ip_webtoon_label"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 아이콘 2: 옥션 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_auction"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:src="@drawable/ic_ip_auction"
                        app:shapeAppearanceOverlay="@style/RoundedSquareImageView"
                        app:strokeColor="#EEEEEE"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/icon_ip_auction_label"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 아이콘 3: 스왑 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_swap"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:src="@drawable/ic_ip_swap"
                        app:shapeAppearanceOverlay="@style/RoundedSquareImageView"
                        app:strokeColor="#EEEEEE"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/icon_ip_swap_label"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- 아이콘 4: 기부 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/icon_donate"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:background="@color/white"
                        android:padding="8dp"
                        android:src="@drawable/ic_charity"
                        app:shapeAppearanceOverlay="@style/RoundedSquareImageView"
                        app:strokeColor="#EEEEEE"
                        app:strokeWidth="1dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/icon_ip_donate_label"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 로고 섹션 -->
        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="16dp"
            android:adjustViewBounds="true"
            android:contentDescription="STIP 로고"
            android:src="@drawable/stip_logo_black" />

        <!-- 정책 및 정보 섹션 - 카드뷰로 감싸기 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- 정책 관련 항목들 -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/textViewPolicy"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:rippleColor="#DDDDDD">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/more_policy_and_terms" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/textViewPrivacy"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/more_privacy_policy" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/textViewYouthPolicy"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/more_youth_policy" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/textViewTransactionStatus"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/more_transaction_status" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/titleuserdataprotection"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/policy_title_dip_valuation" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/titleuserdatafees"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/policy_title_fee_transparency" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/textViewStipulation"
                    style="@style/Widget.MaterialComponents.CardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true"
                    app:cardBackgroundColor="#F8F9FA"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp">

                    <TextView
                        style="@style/DefaultTextStyle_medium_14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:padding="16dp"
                        android:text="@string/more_stipulation" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textViewAppVersion"
                    style="@style/DefaultTextStyle_medium_14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:text="@string/more_app_version_format"
                    android:textAlignment="center"
                    android:textColor="#888888" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- 고객센터 버튼 - Material Design 3 스타일 적용 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonCustomerCenter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#E9F0FE"
            android:paddingVertical="12dp"
            android:text="@string/more_customer_center"
            android:textColor="#0066FF"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:elevation="0dp"
            app:icon="@drawable/ic_headset"
            app:iconGravity="textStart"
            app:iconPadding="8dp"
            app:iconTint="#0066FF" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
