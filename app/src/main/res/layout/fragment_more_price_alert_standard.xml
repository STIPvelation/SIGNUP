                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:background="#F4F7FC"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/tv_ip_swap_alert_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_title_ip_swap_alert"
                    style="@style/DefaultTextStyle_16"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@+id/tv_ip_swap_alert_desc"
                    app:layout_constraintEnd_toStartOf="@+id/switch_ip_swap_alert_container"
                    android:layout_marginEnd="8dp"/>

                <TextView
                    android:id="@+id/tv_ip_swap_alert_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/setting_description_ip_swap_alert"
                    style="@style/DefaultTextStyle_gery_12"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_ip_swap_alert_title"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/switch_ip_swap_alert_container"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"/>

                <FrameLayout
                    android:id="@+id/switch_ip_swap_alert_container"
                    android:layout_width="51dp"
                    android:layout_height="31dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_ip_swap_alert"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:thumbTint="#FFFFFF"
                        app:trackTint="@color/switch_track_selector"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>