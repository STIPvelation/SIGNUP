<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="200dp"
    android:padding="12dp"
    android:background="@drawable/frame_bottom_line_unselected">

    <TextView
        android:id="@+id/text_news"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/title_latest_news"
        style="@style/DefaultTextStyle_14"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/textIpNewsTime"
        app:layout_constraintBottom_toBottomOf="parent"
        android:ellipsize="end"
        android:maxLines="1" />

    <TextView
        android:id="@+id/textIpNewsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_just_now"
        style="@style/standard_time_style"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

