<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/material_toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_navigate_back"
        app:titleCentered="true"
        app:titleTextAppearance="@style/TitleText" />

    <View
        android:id="@+id/spacer1"
        android:layout_width="match_parent"
        android:layout_height="28dp"
        app:layout_constraintTop_toBottomOf="@+id/material_toolbar" />

    <LinearLayout
        android:id="@+id/container_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/DefaultTextStyle_14"
        android:layout_marginHorizontal="@dimen/common_side_margin_20dp"
        android:background="@drawable/bg_frame_rounded"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="12dp"
        android:paddingVertical="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spacer1">

        <RelativeLayout
            android:id="@+id/bank_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/common_real_name_account" />

            <TextView
                android:id="@+id/text_bank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/withdrawable_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextStyle_14"
                android:layout_alignParentStart="true"
                android:text="@string/common_withdrawable_amount" />

            <TextView
                android:id="@+id/text_withdrawable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/withdrawal_limit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextStyle_14"
                android:layout_alignParentStart="true"
                android:text="@string/withdrawal_limit" />

            <TextView
                android:id="@+id/text_withdrawal_limit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                tools:ignore="RelativeOverlap" />
        </RelativeLayout>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/material_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="44dp"
        app:dividerColor="@color/gray_F4F7FC_100"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_info" />

    <FrameLayout
        android:id="@+id/spacer2_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/material_divider">

        <Space
            android:layout_width="match_parent"
            android:layout_height="8dp" />

        <View
            android:id="@+id/spacer2"
            android:layout_width="match_parent"
            android:layout_height="28dp" />

    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="@dimen/common_side_margin_20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spacer2_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/bg_frame_rounded"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/label_withdrawal_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_medium_font_family"
                android:textSize="@dimen/text_size_medium" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginHorizontal="4dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/common_side_margin_20dp">

                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0">

                        <TextView
                            android:id="@+id/amount_hint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/pretendard_medium_font_family"
                            android:text="@string/withdrawal_min_amount"
                            android:textColor="@color/text_gray_B0B8C1_100"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/withdrawal_amount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="14sp" />

                    </FrameLayout>

                    <TextView
                        android:id="@+id/currency_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        tools:text="USD" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <TextView
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_rise" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/common_side_margin_20dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/withdrawal_request"
        app:layout_constraintHeight_min="48dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextStyle_14"
                android:text="@string/label_fee_vat_included" />

            <TextView
                android:id="@+id/fee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/pretendard_medium_font_family"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/fee_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextStyle_14"
                android:textAlignment="textEnd"
                tools:text="USD" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/DefaultTextStyle_14"
                android:layout_marginBottom="8dp"
                android:text="@string/withdrawal_total_vat_included" />

            <TextView
                android:id="@+id/total_withdrawal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:fontFamily="@font/pretendard_medium_font_family"
                android:textAlignment="textEnd"
                android:textColor="@color/sky_30C6E8_100" />

            <TextView
                android:id="@+id/total_withdrawal_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd" />

        </LinearLayout>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/withdrawal_request"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="@dimen/common_side_margin_20dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/selector_gray_b0b8c1_sky_30c6e8_round_4dp"
        android:enabled="false"
        android:fontFamily="@font/pretendard_medium_font_family"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="@string/withdrawal_request"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_medium"
        app:cornerRadius="4dp"
        app:layout_constraintBottom_toTopOf="@+id/rv_sign_up_pin_number_keypad"
        tools:layout_editor_absoluteX="20dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_sign_up_pin_number_keypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:spanCount="3" />

</androidx.constraintlayout.widget.ConstraintLayout>
