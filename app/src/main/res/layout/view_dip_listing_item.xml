<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layout_dip_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- DIP 아이템 예시 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dip_listing_info_ticker_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/frame_bottom_line_unselected"
            android:minHeight="44dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!-- 🔵 DIP 로고 -->
            <ImageView
                android:id="@+id/dip_listing_info_logo_10"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:scaleType="centerCrop"
                android:contentDescription="@null"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- 📝 DIP 설명 -->
            <TextView
                android:id="@+id/dipdescription"
                style="@style/DefaultTextStyle_14"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/dip_listing_info_etipai"
                android:maxLines="1"
                android:ellipsize="end"
                android:autoSizeTextType="uniform"
                android:autoSizeMinTextSize="10sp"
                android:autoSizeMaxTextSize="16sp"
                android:autoSizeStepGranularity="1sp"
                android:minEms="4"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintStart_toEndOf="@id/dip_listing_info_logo_10"
                app:layout_constraintEnd_toStartOf="@id/dip_reprot_date"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <!-- ⏰ 보고 날짜 -->
            <TextView
                android:id="@+id/dip_reprot_date"
                style="@style/standard_time_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/report_time"
                android:maxLines="1"
                android:ellipsize="end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
