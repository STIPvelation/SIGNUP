<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".iptransaction.fragment.IpTransactionFragment">

    <!-- 기본 TabLayout: IP보유, IP손익, IP투자, 미체결 탭 -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/main_point"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/color_tab_active"
        app:tabTextColor="@color/color_tab_inactive" />

    <!-- 기본 ViewPager2: 각 탭에 해당하는 프래그먼트들을 표시 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpagerIpTransaction"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_transaction" />


</androidx.constraintlayout.widget.ConstraintLayout>


