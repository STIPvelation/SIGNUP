<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_quote_background_with_divider"
    android:orientation="horizontal"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:weightSum="3">

    <TextView
        android:id="@+id/item_time_text_view"
        style="@style/DefaultTextStyle_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="start"
        tools:text="@string/date_just_now" />

    <TextView
        android:id="@+id/item_price_text_view"
        style="@style/DefaultTextStyle_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        tools:text="@string/common_number" />

    <TextView
        android:id="@+id/item_volume_text_view"
        style="@style/DefaultTextStyle_12"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        tools:text="@string/common_number" />
</LinearLayout>